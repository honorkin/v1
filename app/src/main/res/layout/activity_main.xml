<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-4127534236390064/5958672997"></com.google.android.gms.ads.AdView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="-5dp"
                tools:layout_editor_absoluteY="3dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/player"
                    android:textColor="#03A9F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="-5dp"
                    tools:layout_editor_absoluteY="147dp">

                    <EditText
                        android:id="@+id/player01"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="@string/player_1st"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusDown="@+id/player02"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="134dp"
                        tools:layout_editor_absoluteY="147dp" />

                    <EditText
                        android:id="@+id/player02"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="@string/player_2nd"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusDown="@+id/banker01"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="-5dp"
                        tools:layout_editor_absoluteY="147dp" />

                    <EditText
                        android:id="@+id/player03"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="@string/player_3rd"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusDown="@+id/banker03"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="64dp"
                        tools:layout_editor_absoluteY="147dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="3dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/banker"
                    android:textColor="#E2857F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="204dp"
                    tools:layout_editor_absoluteY="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="204dp"
                    tools:layout_editor_absoluteY="51dp">

                    <EditText
                        android:id="@+id/banker01"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="@string/banker_1st"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusDown="@+id/banker02"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="273dp"
                        tools:layout_editor_absoluteY="51dp" />

                    <EditText
                        android:id="@+id/banker02"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="@string/banker_2nd"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusDown="@+id/player03"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="342dp"
                        tools:layout_editor_absoluteY="51dp" />

                    <EditText
                        android:id="@+id/banker03"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="@string/banker_3rd"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusDown="@+id/result"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="204dp"
                        tools:layout_editor_absoluteY="51dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/i_hope_you_a_win"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/howtouse"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00BCD4"
            android:text="@string/how_to_use"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="216dp" />

        <Button
            android:id="@+id/result"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFC107"
            android:text="@string/maybe_next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:gravity="center"
            android:text="@string/please_read_manual_carefully_before_use"
            android:textColor="#009688" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>